<!DOCTYPE html>
<html>
  <head>
    <title>Peer Park</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.js"></script>
    <%= javascript_pack_tag 'app-bundle' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

  <body>
 <div class="container">
 <div class="grid header">
<div class="banner">
  <header class="navbar">
        <div class="navbar-class">
          <div class="containter">
          <% if user_signed_in? %>
            <div class="ui compact menu">
              <div class="ui simple dropdown item">
                <i class="bars icon"></i>
                <div class="menu">
                  <%= link_to('Profile', edit_user_registration_path, class: "item") %>
                  <div class="item">Account History</div>
                  <%= link_to('Find a Space', root_path, class: "item") %>
                  <%= link_to('List a Space', new_space_path, class: "item") %>
                  <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "item") %>
                </div>
              </div>
            </div>
            <%= image_tag("Peer_Park_Logo.png", :class => "style_logo", :alt => "Peer Park Logo") %>

          </div>
        </div>

      </div>

  </div>
          <% else %>
            <%= link_to('Login', new_user_session_path, { class: 'ui button' })  %>
            <%= link_to('Sign up to List a Space', new_user_registration_path + '?list=true', { class: 'ui button' })  %>
            <%= link_to('Sign up to Find a Space', new_user_registration_path + '?list=false', { class: 'ui button'})  %>
          <% end %>   

  </header>

 </div> 
 </div>
 </div>
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
    <%= yield %>

  </body>
</html>
